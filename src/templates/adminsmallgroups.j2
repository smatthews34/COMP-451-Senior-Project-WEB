<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prayer List</title>
</head>
<body>
    <a href="/admin">Home</a>
    <a href="/admin/prayerlist">Prayer Requests</a>
    <a href="/admin/guidedprayers">Guided Prayers</a>
    <a href="/admin/smallgroups">Small Groups</a>
    <a href="/admin/adminlist">Administrators</a>
    <a href="/admin/memberlist">Members</a>
    <!--display prayers-->
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Prayer</th>
            </tr>
        </thead>
        <tbody>
            {% for request in requests %}
                <tr>
                    {% if request['isAnonymous'] == true %}
                        <td>Anonymous</td>
                    {% else %}
                        <td>{{request['firstName']}} {{request['lastName']}}</td>
                    {% endif %}
                    <td>{{request['text']}}</td>
                    {% if request['update'] %}
                        <td>UPDATE: {{request['update']}}</td>
                    {% endif %}
                    
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="/admin">Back</a>
</body>
</html>